{
	"manifest_version": 2,
	"name": "Echo",
	"version": "1.0",
	"description": "",
	"icons": {
		"16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},
	"permissions": [ "tabs", "webRequest", "http://*/*", "https://*/*" ],
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["js/content.js"],
			"all_frames":true
		}
	]
}